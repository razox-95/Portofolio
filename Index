    <script>
        // --- LOGIQUE POUR LE CURSEUR PERSONNALIS√â ---
        const cursor = document.querySelector('.cursor');
        const interactiveElements = document.querySelectorAll('a, button, .card');

        window.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });
        
        interactiveElements.forEach(el => {
            el.addEventListener('mouseenter', () => cursor.classList.add('grow'));
            el.addEventListener('mouseleave', () => cursor.classList.remove('grow'));
        });

        // --- LOGIQUE POUR LE BOUTON COPIER ---
        const copyBtn = document.getElementById('copyBtn');
        const discordId = document.getElementById('discordId').innerText;

        copyBtn.addEventListener('click', () => {
            navigator.clipboard.writeText(discordId).then(() => {
                const originalText = copyBtn.innerText;
                copyBtn.innerText = 'Copi√© ! ‚úÖ';
                setTimeout(() => {
                    copyBtn.innerText = originalText;
                }, 2000);
            }).catch(err => {
                console.error('Erreur lors de la copie', err);
            });
        });

        // --- LOGIQUE POUR L'ANIMATION AU D√âFILEMENT (INTERSECTION OBSERVER) ---
        const revealElements = document.querySelectorAll('.reveal');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                    // Optionnel : arr√™ter d'observer l'√©l√©ment une fois qu'il est visible
                    observer.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.1 // L'√©l√©ment est consid√©r√© visible √† 10%
        });

        revealElements.forEach(el => {
            observer.observe(el);
        });
    </script>
